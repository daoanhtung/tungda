@model MyWebsite.Models.BottomMenuViewModel
@using MyWebsite.Resx
@using MyWebsite.Utils
<!-- footer BOF -->
<div class="footer-container">
    <div class="footer-banners">
        <div class="row clearfix">
            <div class="grid_6">
                <a title="free shipping on orders over $100" href="http://queldorei.com/">
                    <img src="@Url.Content("~/Content/images/footer/footer_banner_1.png")" width="570" height="56" class="retina" alt="" /></a>
            </div>
            <div class="grid_6">
                <a title="call us! toll free 8-800-123-1234" href="http://queldorei.com/">
                    <img src="@Url.Content("~/Content/images/footer/footer_banner_2.png")" width="570" height="56" class="retina" alt="" /></a>
            </div>
        </div>
    </div>
    <div class="footer-info">
        <div class="row clearfix facebook">
            <div class="grid_3">
                <h4>@RsCommon.Facebook</h4>
                <div class="block-content">
                    <iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fqueldoreithemes&amp;width=270&amp;show_faces=true&amp;colorscheme=light&amp;stream=false&amp;show_border=false&amp;header=false" scrolling="no" frameborder="0" allowtransparency="true"></iframe>
                </div>
            </div>
            <div class="grid_3">
                <h4>@RsCommon.FromTwitter</h4>
                <div class="block-content clearfix">
                    <div data-user="queldoreithemes" class="twitterWidget">
                        <div class="twitterContent">
                            <ul class="twitterList">
                                <a class="twitter-timeline" href="https://twitter.com/FootballManager" data-widget-id="563379812627009536">@Html.Raw("Tweets by @FootballManager")</a>
                                <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>

                            </ul>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="grid_3 information">
                <h4>@RsCommon.Information</h4>
                <div class="block-content">
                    <ul>
                        @foreach(var menu in Model.Menus)
                        {
                            <li><a href="@menu.MenuLink">@menu.MenuText</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="grid_3">
                <h4>@RsCommon.Contact</h4>
                <div class="block-content">
                    <p>Lingeries Store</p>
                    <p>34 New Clity 5655, Excel Tower</p>
                    <p>OPG Rpad, 4538FH</p>
                    <hr />
                    <p>+1 800 123 1234</p>
                    <hr />
                    <p><a href="@Common.GetAppStr("ContactEmail")">@Common.GetAppStr("ContactEmail")"</a></p>
                    <ul class="social">
                        <li><a class="twitter" href="https://twitter.com/FootballManager" target="social"><span>@RsCommon.Twitter</span></a></li>
                        <li><a class="facebook" href="http://facebook.com/queldorei" target="social"><span>@RsCommon.Facebook</span></a></li>
                        <li><a class="email" href="mailto:@Common.GetAppStr("ContactEmail")"><span>@RsCommon.Email</span></a></li>
                        <li><a class="google" href="http://plus.google.com/u/0/111109476451145065018" target="social"><span>@RsCommon.Google</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <footer class="row clearfix">
        <div class="grid_6">
            <address>@Html.Raw(RsCommon.License)</address>
        </div>
        <div class="grid_6">
            <ul class="links">
                <li><a href="@Common.GetAppStr("AboutUsPage")" title="About Us">@RsCommon.AboutUs</a></li>
                <li class="separator"></li>
                <li><a href="@Common.GetAppStr("DeliveryPage")" title="Delivery & Returns">@RsCommon.DeliveryAndReturn</a></li>
                <li class="separator"></li>
                <li><a href="@Common.GetAppStr("TermPage")" title="Terms & Conditions">@RsCommon.TermAndCondition</a></li>
                <li class="separator"></li>
                <li><a href="@Common.GetAppStr("ContactPage")" title="Contact Us">@RsCommon.ContactUs</a></li>
            </ul>
        </div>
    </footer>
</div>
<!-- footer EOF -->